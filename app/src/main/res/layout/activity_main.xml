<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.it_college.std.s15009.attend.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:layout_marginTop="40dp"
        android:rowCount="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="時刻予定"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:id="@+id/current_time"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:layout_columnSpan="2" />
        <ToggleButton
            android:text="下校"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backschool_button"
            android:textOff="下校"
            android:textOn="下校"
            android:layout_alignParentEnd="true"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:padding="60dp"
            android:textSize="36sp"
            android:background="@drawable/toggle_button_back_school" />
        <ToggleButton
            android:text="登校"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attending_button"
            android:textOff="登校"
            android:textOn="登校"
            android:layout_below="@+id/current_time"
            android:layout_alignParentStart="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:padding="60dp"
            android:textSize="36sp"
            android:background="@drawable/toggle_button_attend" />

    </GridLayout>

</RelativeLayout>
